                            <textarea class="tinymce-editor" name="eight_heading" id="eight_heading"><%= homeContent[0].eight_heading %></textarea>
                          </div>
                            
                          </div>
                        <div class="col-12 text-center mb-3">
                          <div class="form-group">
                          <button type="submit" class="btn btn-primary">Update</button>
                          </div>
                        </div>
                      </form><!-- Vertical Form -->
        
                    </div>
                  </div>
            </div>

           
            </div>
            </div>
        </section>
      </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <%- include('layout/footer') %>
