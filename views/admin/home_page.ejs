                            <textarea class="tinymce-editor" name="five_heading" id="five_heading"><%= homeContent[0].five_heading %></textarea>
                          </div>
                          
                          <div class="col-12 mb-3">
                            <label for="second_heading" class="form-label">Details</label>
                            <textarea class="tinymce-editor" name="six_heading" id="six_heading"><%= homeContent[0].six_heading %></textarea>
