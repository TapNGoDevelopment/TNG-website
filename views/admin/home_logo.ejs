<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('layout/comman_menu') %>
</head>

<body>
 <%- include('layout/menu') %>
  <!-- ======= Sidebar ======= -->
  <%- include('layout/sidebar') %>
    <!-- End Sidebar-->

    <main id="main" class="main">
     
       
        <section class="section">
            <div class="row">
                
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">Home Logo <button class="btn btn-primary btn-sm btnNewLogo">Add New<i class="bi bi-plus"></i></button></h5>

                      <div class="row mb-5 justify-content-center" id="formNewContent" style="display:none;">
                       
                          <div class="col-5 border p-3">
                            <form id="formNewLogo" method="post" enctype="multipart/form-data" onsubmit="return false;">
                              <div class="form-group mb-3">
                                  <label for="main_image" class="form-label">Logo</label>
                                  <input class="form-control" type="file" id="formFile" name="main_image" required="required">
                              </div>
                              <div class="form-group mb-3">
                                <label for="main_image" class="form-label">Redirect Link</label>
                                <input class="form-control" type="url" id="redirect_link" name="redirect_link">
                            </div>
                            <div class="form-group float-end">
                              <button class="btn btn-secondary btn-sm btnNewLogo">Cancel<i class="bi bi-reply"></i></button>
                              <button class="btn btn-success btn-sm">Save<i class="bi bi-save2"></i></button>
                            </div>
                          </form>
                          </div>
                         
                      </div>
                      <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Logo</th>
                            <th scope="col">Link</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if(homeLogo.length!=0){
                            var i = 1; 
                            homeLogo.forEach(function(logos){
                          %>
                          <tr id="<%=logos.id %>">
                            <th scope="row"><%= i %></th>
                            <td><img src="/home_logo/<%=logos.logo %>" width="100" height="50"/></td>
                            <td><a href="<%=logos.logo_link %>" target="_new"><%=logos.logo_link %></a></td>
                            <td> <button type="button" class="btn btn-sm btn-danger btnDeleteLogo" data-id="<%=logos.id %>"><i class="bi bi-trash"></i></button></td>
                          </tr>
                          <% i++; }) } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
            </div>
            </div>
        </section>
      </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <%- include('layout/footer') %>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/admin-theme/js/home_page.js"></script>
</body>
</html>